<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="180.0" maxWidth="210.0" minHeight="180.0" minWidth="210.0" prefHeight="180.0" prefWidth="210.0"
            stylesheets="css/login.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chentsov.client.controllers.ConnectionSettingsController">
    <children>
        <Button fx:id="cancelButton" layoutX="131.0" layoutY="130.0" maxHeight="32.0" maxWidth="75.0" minHeight="32.0"
                minWidth="75.0" mnemonicParsing="false" onAction="#close" prefHeight="32.0" prefWidth="75.0"
                text="Cancel"/>
        <Button fx:id="okButton" layoutX="14.0" layoutY="130.0" maxHeight="32.0" maxWidth="75.0" minHeight="32.0"
                minWidth="75.0" mnemonicParsing="false" onAction="#setAddress" prefHeight="32.0" prefWidth="75.0"
                text="OK"/>
        <Label layoutX="32.0" layoutY="14.0" text="Please enter server address:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <TextField fx:id="addressTextField" layoutX="10.0" layoutY="43.0" maxHeight="32.0" maxWidth="200.0"
                   minHeight="32.0" minWidth="200.0" prefHeight="32.0" prefWidth="200.0" promptText="IP address"/>
        <TextField fx:id="portTextField" layoutX="10.0" layoutY="84.0" maxHeight="32.0" maxWidth="200.0"
                   minHeight="32.0" minWidth="200.0" prefHeight="32.0" prefWidth="200.0" promptText="port"/>
    </children>
</AnchorPane>
